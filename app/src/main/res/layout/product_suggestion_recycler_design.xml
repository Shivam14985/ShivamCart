<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="265dp"
    android:layout_margin="2.5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/Suggetion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/MobImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/mobileCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Company"
            android:textColor="#9A9A9A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobileModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:maxLines="2"
            android:text="Model"
            android:textColor="@color/lightblack"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileStorage"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/mobileImage"
                android:textColor="#6A6A6A"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobileActualPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileStorage"
                android:layout_toEndOf="@+id/textView6"
                android:text="44,490"
                android:textColor="#9A9A9A"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mobileActualPrice"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/mobileActualPrice"
                android:text="â‚¹"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobilePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView7"
                android:layout_toEndOf="@+id/textView7"
                android:text="34,490"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mobileDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileActualPrice"
                android:layout_toEndOf="@+id/mobileImage"
                android:text="22"
                android:textColor="#025C09"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mobileDiscount"
                android:layout_toEndOf="@+id/mobileDiscount"
                android:text="% off  "
                android:textColor="#025C09"
                android:textStyle="bold" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratings"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:numStars="5"
            android:progressTint="#008722"
            android:rating="0"
            android:stepSize="1"></RatingBar>
    </LinearLayout>
</androidx.cardview.widget.CardView>