<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mobilecompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="TextView"
                    android:maxLines="1"
                    android:ems="3"
                    android:layout_marginRight="27dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/mobiledescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="TextView"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobileStorage"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/mobileImage"
                        android:textColor="#6A6A6A"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ActualPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobileStorage"
                        android:layout_toEndOf="@+id/textView6"
                        android:text="44,490"
                        android:textColor="#6A6A6A"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/mobileActualPrice"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/mobileActualPrice"
                        android:text="â‚¹"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView7"
                        android:layout_toEndOf="@+id/textView7"
                        android:text="34,490"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobileActualPrice"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/mobileImage"
                        android:text="22"
                        android:textColor="#025C09"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/mobileDiscount"
                        android:layout_toEndOf="@+id/mobileDiscount"
                        android:text="% off  "
                        android:textColor="#025C09"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="TextView"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:layout_marginTop="-98dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/delete"></ImageView>
            <!--            <View-->
            <!--                android:id="@+id/deleteProduct"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:layout_marginTop="-90dp"-->
            <!--                android:background="#17000000"-->
            <!--                android:layout_marginEnd="10dp"></View>-->
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>