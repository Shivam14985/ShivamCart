<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gold"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/CartRecyclerSample"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#B5B5B5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-138dp"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/dicount_bg"
                >
                <TextView
                    android:id="@+id/mobileDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobileActualPrice"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/mobileImage"
                    android:text="22"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/mobileDiscount"
                    android:layout_toEndOf="@+id/mobileDiscount"
                    android:text="% off  "
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="#F3F3F3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#B5B5B5"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#B5B5B5"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#B5B5B5"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:background="#B5B5B5"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#B5B5B5"
                android:orientation="horizontal"></LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>